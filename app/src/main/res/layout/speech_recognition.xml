<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SpeechRecognition">

    <data>
        <variable
            name="speechRecognition"
            type="com.minseo.callbank.view.speech.SpeechRecognition" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="무엇을\n도와드릴까요?"
            style="@style/textHeadline0"
            android:layout_marginBottom="100dp"
            android:gravity="center"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btSpeech"
            style="@style/textHeadline0"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/setcheck_cancel"
            android:paddingLeft="70dp"
            android:drawableLeft="@drawable/ic_mic_black_48"
            android:drawablePadding="-100dp"
            android:text="음성 인식"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btCall"
            style="@style/textHeadline0"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/setcheck_cancel"
            android:paddingLeft="35dp"
            android:drawableLeft="@drawable/ic_call_black_48"
            android:drawablePadding="-40dp"
            android:text="상담원 전화 연결"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btBack"
            style="@style/textHeadline1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:paddingLeft="110dp"
            android:drawableLeft="@drawable/ic_backspace_black_32"
            android:drawablePadding="-130dp"
            android:background="@drawable/setcheck_cancel"
            android:text="뒤로"
            android:textColor="@color/black" />
    </LinearLayout>
</layout>
