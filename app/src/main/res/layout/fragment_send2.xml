<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            style="@style/textHeadline1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="통장의 비밀번호를\n눌러주세요"
            android:lineSpacingExtra="-5dp"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/hanaxhdpi" />

            <TextView
                style="@style/textBody16"
                android:id="@+id/textView"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray8_text"
                android:text="계좌 이름" />
        </LinearLayout>

        <com.poovam.pinedittextfield.SquarePinField
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            style="@style/textHeadline1"
            app:cornerRadius="0dp"
            app:fieldBgColor="#fff"
            app:distanceInBetween="1dp"
            app:noOfFields="4"
            android:textSelectHandle="@drawable/text_handle"
            android:id="@+id/squareField"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"/>

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="30dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    style="@style/textHeadline0"
                    android:id="@+id/bt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:background="@drawable/setcheck_keyboard"
                    android:text="3"
                    android:textColor="@color/black" />

                <Button
                    style="@style/textHeadline0"
                    android:id="@+id/bt8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:background="@drawable/setcheck_keyboard"
                    android:text="8"
                    android:textColor="@color/black"/>

                <Button
                    style="@style/textHeadline0"
                    android:id="@+id/bt5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:background="@drawable/setcheck_keyboard"
                    android:text="5"
                    android:textColor="@color/black" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <Button
                    style="@style/textHeadline0"
                    android:id="@+id/bt6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:background="@drawable/setcheck_keyboard"
                    android:text="6"
                    android:textColor="@color/black" />

                <Button
                    style="@style/textHeadline0"
                    android:id="@+id/bt9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:background="@drawable/setcheck_keyboard"
                    android:text="9"
                    android:textColor="@color/black" />

                <Button
                    style="@style/textHeadline0"
                    android:id="@+id/bt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:background="@drawable/setcheck_keyboard"
                    android:text="2"
                    android:textColor="@color/black" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <Button
                    style="@style/textHeadline0"
                    android:id="@+id/bt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:background="@drawable/setcheck_keyboard"
                    android:text="4"
                    android:textColor="@color/black" />

                <Button
                    style="@style/textHeadline0"
                    android:id="@+id/bt0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:background="@drawable/setcheck_keyboard"
                    android:text="0"
                    android:textColor="@color/black" />

                <Button
                    style="@style/textHeadline0"
                    android:id="@+id/bt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:background="@drawable/setcheck_keyboard"
                    android:text="1"
                    android:textColor="@color/black" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <Button
                    style="@style/textHeadline0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/setcheck_keyboard"
                    android:text=""
                    android:textColor="@color/black" />

                <Button
                    style="@style/textHeadline0"
                    android:id="@+id/bt7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:background="@drawable/setcheck_keyboard"
                    android:text="7"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:id="@+id/btDelete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-5dp"
                        android:src="@drawable/ic_backspace_red_40" />

                    <TextView
                        style="@style/textBody14"
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/emphasize_alert"
                        android:text="취소" />
                </LinearLayout>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <android.widget.Button
                android:id="@+id/bt_back"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_weight="1"
                style="@style/textHeadline2"
                android:textColor="@color/black"
                android:layout_marginRight="20dp"
                android:background="@drawable/setcheck_cancel"
                android:drawablePadding="-30dp"
                android:paddingLeft="30dp"
                android:drawableLeft="@drawable/ic_backspace_black_32"
                android:text="뒤로" />

            <android.widget.Button
                android:id="@+id/bt_next"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_weight="1"
                style="@style/textHeadline2"
                android:textColor="@color/white"
                android:background="@drawable/setcheck_main"
                android:drawablePadding="-30dp"
                android:paddingLeft="30dp"
                android:drawableLeft="@drawable/ic_check_circle_white_32"
                android:text="계속" />
        </LinearLayout>
    </LinearLayout>
</layout>
